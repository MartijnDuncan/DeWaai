{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6 p-5">
                <h1 style="color: #1C75A3">Inloggen</h1>
                <p>Op deze pagina kunt u zich aanmelden met het account die u in de mail heeft gekregen</p>
                    <form>
                        <div class="form-group">
                            <input id="name" name="name" placeholder="Naam" type="text" required="required" class="form-control">
                        </div>
                            <div class="form-group">
                                <input id="password" name="password" placeholder="Wachtwoord" type="password" required="required" class="form-control">
                            </div>
                        <div class="form-group">
                <button name="submit" type="submit" class="btn btn-primary">Inloggen</button>
            </div>
          </form>
        </div>
     </div>
    </div>
{% endblock body %}